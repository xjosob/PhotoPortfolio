@model PhotoPortfolio.Models.Album

@{
    ViewData["Title"] = "Album Details";
}

<h1>@Model.Title</h1>
<p>@Model.Description</p>

@if (!string.IsNullOrEmpty(Model.ThumbnailPath))
{
    <img src="@Model.ThumbnailPath" alt="Album Thumbnail" class="img-thumbnail" style="width: 150px; height: 150px;" />
}

@if (User.IsInRole("Admin"))
{
    <form asp-action="UpdateThumbnail" enctype="multipart/form-data">
        <div class="form-group">
            <label for="Thumbnail" class="control-label">Update Thumbnail</label>
            <input type="file" name="Thumbnail" class="form-control" />
        </div>
        <input type="hidden" name="albumId" value="@Model.AlbumID" />
        <div class="form-group">
            <input type="submit" value="Upload" class="btn btn-primary" />
        </div>
    </form>
}

<h3>Photos</h3>

@if (User.IsInRole("Admin"))
{
    <p>
        <a href="@Url.Action("Create", "Photos", new { albumId = Model.AlbumID })" class="btn btn-primary">Add Photo</a>
    </p>
}

<div class="row">
    @foreach (var photo in Model.Photos)
    {
        <div class="col-md-3">
            <div class="card mb-3">
                <a href="@photo.FilePath" target="_blank">
                    <img class="card-img-top" src="@photo.FilePath" alt="Photo">
                </a>
                <div class="card-body">
                    @if (User.IsInRole("Admin"))
                    {
                        <a href="@Url.Action("Delete", "Photos", new { id = photo.PhotoID })" class="btn btn-danger">Delete Photo</a>
                    }
                </div>
            </div>
        </div>
    }
</div>
