@using Microsoft.AspNetCore.Identity
@inject SignInManager<IdentityUser> SignInManager
@inject UserManager<IdentityUser> UserManager

@if (SignInManager.IsSignedIn(User))
{
    <ul class="navbar-nav flex-grow-1 justify-content-end">
        <li class="nav-item">
            <a class="nav-link text-dark" asp-controller="Admin" asp-action="Index" title="Admin Dashboard">Hello @UserManager.GetUserName(User)!</a>
        </li>
        <li class="nav-item">
            <form asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="/" method="post" id="logoutForm" class="form-inline">
                <button type="submit" class="btn btn-link text-dark" style="cursor:pointer;">Logout</button>
            </form>
        </li>
    </ul>
}
