@using Microsoft.AspNetCore.Identity
@inject SignInManager<IdentityUser> SignInManager
@inject UserManager<IdentityUser> UserManager

@if (SignInManager.IsSignedIn(User))
{
    <form asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="/" method="post" id="logoutForm" class="navbar-right">
        <ul class="navbar-nav flex-grow-1 justify-content-end">
            <li class="nav-item">
                <a class="nav-link text-dark" asp-page="/Account/Manage/Index" title="Manage">Hello @UserManager.GetUserName(User)!</a>
            </li>
            <li class="nav-item">
                <button type="submit" class="nav-link btn btn-link text-dark" style="cursor:pointer;">Logout</button>
            </li>
        </ul>
    </form>
}
