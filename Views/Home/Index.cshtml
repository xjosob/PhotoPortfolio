@model IEnumerable<PhotoPortfolio.Models.Album>

@{
    ViewData["Title"] = "Home Page";
}

<h1>Albums</h1>

<div class="row">
    @foreach (var album in Model)
    {
        <div class="col-md-3">
            <div class="card mb-3">
                @if (!string.IsNullOrEmpty(album.ThumbnailPath))
                {
                    <img class="card-img-top" src="@album.ThumbnailPath" alt="Album Thumbnail" />
                }
                <div class="card-body">
                    <h5 class="card-title">@album.Title</h5>
                    <p class="card-text">@album.Description</p>
                    <a href="@Url.Action("Details", "Albums", new { id = album.AlbumID })" class="btn btn-primary">View Album</a>
                </div>
            </div>
        </div>
    }
</div>
